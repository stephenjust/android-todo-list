<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.stephenjust.todolist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TodoListActivity"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter android:label="sajust-notes">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SummaryActivity"
            android:label="@string/summary" android:screenOrientation="portrait" android:parentActivityName="ca.stephenjust.todolist.TodoListActivity">
        </activity>
    </application>

    <!-- To access Google+ APIs: -->

</manifest>
